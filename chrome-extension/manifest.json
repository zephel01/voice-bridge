{
  "manifest_version": 3,
  "name": "Voice Bridge - リアルタイム英日翻訳",
  "version": "1.0.0",
  "description": "タブの英語音声をリアルタイムで日本語に翻訳して読み上げる Chrome 拡張機能",
  "permissions": [
    "tabCapture",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:50021/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
